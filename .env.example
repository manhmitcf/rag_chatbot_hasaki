# Gemini API Key (Required)
GEMINI_API_KEY=

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=vectordb

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Search Configuration
SEMANTIC_SEARCH_LIMIT=50
RERANK_TOP_K=20
CONTEXT_TOP_K=8

# RAG Configuration
CONVERSATION_MEMORY_K=3
LLM_TIMEOUT=20
LLM_TEMPERATURE=0.1

# MongoDB Configuration (optional)
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_AUTH_SOURCE=admin
MONGODB_DATABASE=hasaki_db
MONGO_COLLECTION=products_detail

# Embedding Model Configuration
EMBEDDING_MODEL=bkai-foundation-models/vietnamese-bi-encoder
EMBEDDING_DIMENSION=768

# GPU Configuration
USE_GPU=auto
GPU_DEVICE_ID=0

# Text Splitter Configuration
DEFAULT_CHUNK_SIZE=800
DEFAULT_OVERLAP=200
MARKDOWN_CHUNK_SIZE=800
MARKDOWN_OVERLAP=200

# Processing Configuration
MAX_PRODUCTS_LIMIT=50
BATCH_SIZE=100
UPLOAD_BATCH_SIZE=50
MAX_PRODUCTS=10
EMBEDDING_BATCH_SIZE=64
RERANK_BATCH_SIZE=32